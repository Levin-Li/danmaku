{
  "manifest_version": 2,

  "name": "Danmaku",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",

  "content_scripts": [
      {
          "matches": ["https://www.bilibili.com/video/av*"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "css": ["bili.css"],
          "run_at": "document_idle"
      }
  ],

  "permissions": [
    "https://www.bilibili.com/"
  ]
}

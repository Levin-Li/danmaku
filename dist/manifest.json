{
  "manifest_version": 2,

  "name": "Danmaku",
  "description": "An extension that helps create and visualize a danmaku (video comments) histogram.",
  "version": "1.0",

  "icons": {
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon128.png"
  },

  "content_scripts": [
      {
          "matches": ["https://www.bilibili.com/video/av*"],
          "js": ["js/vendor.js", "js/content_script.js"],
          "css": ["bili.css"],
          "run_at": "document_idle"
      }
  ],

  "permissions": [
    "https://www.bilibili.com/"
  ]
}
